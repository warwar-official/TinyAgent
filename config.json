{
    "providers": [
        {
            "name": "gemini",
            "endpoint": "https://generativelanguage.googleapis.com/v1beta/models/",
            "structure": "google-compatible"
        },
        {
            "name": "lmstudio",
            "endpoint": "http://192.168.50.212:1234/v1/",
            "structure": "openai-compatible"
        }
    ],
    "agent": {
        "model": {
            "model_id": "gemma-3-27b-it",
            "provider": "gemini",
            "api_key_name": "GEMINI_API_KEY"
        },
        "summary_model": {
            "model_id": "gemma-3-12b-it",
            "provider": "gemini",
            "api_key_name": "GEMINI_API_KEY"
        }
    },
    "context": {
        "prompts_path": "./data/prompts.json",
        "conversation_history_path": "./data/history/conversation_history.json",
        "task_history_path": "./data/history/task_history.json",
        "tasks_path": "./data/history/tasks.json",
        "state_path": "./data/state.json",
        "memory": {
            "active": true,
            "db_path": "./data/memory/db/",
            "models_cache_path": "./data/memory/models/",
            "emb_model_name": "intfloat/multilingual-e5-large",
            "merge_model": {
                "model_id": "gemma-3-4b-it",
                "provider": "gemini",
                "api_key_name": "GEMINI_API_KEY"
            }
        }
    },
    "plugins": {
        "telegram": {
            "secret_path": "./data/telegram_secret.json"
        }
    },
    "tools": [
        {
            "name": "current_weather",
            "description": "Gets the current weather and forecast for a specific city. Use this when the user asks about weather conditions.",
            "parameters": {
                "properties": {
                    "location": {
                        "type": "string",
                        "description": "The specific city name, e.g., 'Kyiv', 'Lviv'."
                    }
                },
                "required": [
                    "location"
                ]
            }
        },
        {
            "name": "web_search",
            "description": "Searches the web for a given query.",
            "parameters": {
                "properties": {
                    "query": {
                        "type": "string",
                        "description": "The query to search for"
                    },
                    "count": {
                        "type": "integer",
                        "description": "The number of results to return.",
                        "default": 3,
                        "minimum": 1,
                        "maximum": 5
                    }
                },
                "required": [
                    "query"
                ]
            }
        },
        {
            "name": "web_fetch",
            "description": "Fetches the content of internet souces by URL. Returns clean text, links, and table data. It is not rendering images or scripts.",
            "parameters": {
                "properties": {
                    "url": {
                        "type": "string",
                        "description": "The URL to fetch content from."
                    }
                },
                "required": [
                    "url"
                ]
            }
        },
        {
            "name": "file_io",
            "description": "Performs file operations in filesystem (read, write, append).",
            "parameters": {
                "properties": {
                    "path": {
                        "type": "string",
                        "description": "The path to the file."
                    },
                    "mode": {
                        "type": "string",
                        "description": "The mode to open the file in. Valid values: 'r' (read), 'w' (write), 'a' (append).",
                        "enum": [
                            "r",
                            "w",
                            "a"
                        ]
                    },
                    "content": {
                        "type": "string",
                        "description": "The content to write to the file (only used in 'w' or 'a' modes)."
                    }
                },
                "required": [
                    "path",
                    "mode"
                ]
            }
        },
        {
            "name": "file_list",
            "description": "Lists all files and subdirectories in a specific directory within the workspace.",
            "parameters": {
                "properties": {
                    "dir": {
                        "type": "string",
                        "description": "Relative path to the directory (e.g., './data/'). Use '.' for the root workspace directory."
                    }
                },
                "required": [
                    "dir"
                ]
            }
        }
    ]
}